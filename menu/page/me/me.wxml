<view class="container">
  <view class="head-background">
      <image class="userinfo-bgImg" src="{{userInfo.avatarUrl}}"></image>
  </view>
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{name}}</text>
    <text class="userProfile" id="userProfile">{{introduction}}</text>
  </view>
  <view class="usermotto interval">
    <image class="myNumber"  src="http://xxy1978.oss-cn-shenzhen.aliyuncs.com/User-icon/my_number.png" bindtap="map"></image>
    <text class="user-number">当前排号:</text>
    <text class="number">6</text>
  </view>
  <view class="userItem" bindtap="detail">
    <image class="userItemImg" src="http://xxy1978.oss-cn-shenzhen.aliyuncs.com/User-icon/order.png"></image>
    <text class="userItemText" >我的订单</text>
    <image class="userItemArrow"  src="../../res/images/icon/right.png"></image>
  </view>
  <view class="interval" bindtap="collection">
  </view>
</view>

