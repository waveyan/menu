@import "../../res/wxss/shopcar.wxss";
@import "../../templates/buyTemplate/cart/cart.wxss";
page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.container {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.header {
  width: 100%;
  position: relative;
  background-color: #58401f;
  border: 1px solid #3f2706;
  background-image: -o-linear-gradient(bottom, #715938 0%, #58401f 100%);
  background-image: -moz-linear-gradient(bottom, #715938 0%, #58401f 100%);
  background-image: -webkit-linear-gradient(bottom, #715938 0%, #58401f 100%);
  background-image: -ms-linear-gradient(bottom, #715938 0%, #58401f 100%);
  background-image: linear-gradient(to bottom, #715938 0%, #58401f 100%);
  -webkit-box-shadow: inset 0 1px 0 #8a7251;
  -moz-box-shadow: inset 0 1px 0 #8a7251;
  box-shadow: inset 0 1px 0 #8a7251;
  text-shadow: 0 1px 0 #8a7251;
  padding: 20rpx 40rpx;
  -webkit-transition: all 0.6s ease-in-out;
}

.header.hidden {
	/*-webkit-transform: translate3d(0,-290rpx,0);*/
	margin-top: -290rpx;
}
.header .logo {
	float: left;
	width: 160rpx;
	height: 160rpx;
	border: 2rpx solid #fff;
	border-radius: 50%;
	margin-right: 10px;
}
.header .name {
	padding-top: 20rpx;
	font-size: 36rpx;
	line-height: 60rpx;
  color: white
}
.header .welcome {
	color: #333;
	font-size: 30rpx;
	line-height: 70rpx;
  color: white
}

.header .line {
	clear: both;
	width: 100%;
	height: 1px;
	border-bottom: 1px dashed #000;
	padding-top: 20rpx;
}
.header .desc {
	color: #333;
	font-size: 30rpx;
	line-height: 40rpx;
	padding-top: 20rpx;
  color: white
}

.content-container {
  display: -webkit-flex;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.classify-container {
  width: 180rpx;
  background: #efefef;
  height: 100%;
}

.classify-container .classify {
  padding: 50rpx 30rpx;
  text-align: center;
  border-bottom: 1px dashed #aaa;
}

.classify-container .classify.active {
  background: #fff;
}

.classify-container .classify .name {
  display: inline-block;
  font-size: 30rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.goods-container {
  -webkit-flex: 1;
  background: #fff;
  height: 100%;
}

.goods-container .title {
  padding: 20rpx 25rpx;
  color: #646464;
  font-size: 30rpx;
  line-height: 30rpx;
  background: #f7f7f7;
}

.goods-container .goods {
  position: relative;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}

.goods-container .goods .pic {
  float: left;
  width: 180rpx;
  height: 130rpx;
  margin-right: 20rpx;
}

.goods-container .goods .name {
  color: #000;
  font-size: 36rpx;
  line-height: 46rpx;
}

.goods-container .goods .sold {
  color: #989898;
  font-size: 30rpx;
  line-height: 46rpx;
}

.goods-container .goods .price {
  color: #feb70f;
  font-size: 36rpx;
  line-height: 46rpx;
}

.goods-container .goods .addCart {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  width: 64rpx;
  height: 64rpx;
  /* background: #feb70f; */
  border-radius: 50%;
}

.goods-container .goods .addCart image {
  pointer-events: none;
  /* position: absolute; */
  left: 10rpx;
  top: 20rpx;
  width: 64rpx;
  height: 64rpx;
}
.button_mode{
    position:absolute;
    right:30rpx;
    bottom:20rpx;
    width:150rpx;
    height:50rpx;
    background-color: #feb70f;
    color: white;
    font-size: 26rpx;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottom-check{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 116%;
    background: rgba(0,0,0,0.7);
}
.check-top {
    height: 40%;
}
.check-bottom{
    position: relative;
    height: 60%;
    background: #f2f2f2;
}
.warning{
    display: inline-block;
    position: absolute;
    top: 70rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 10rpx 26rpx;
    background-color: rgba(0,0,0,0.6);
    color: white;
    font-size: 28rpx;
    z-index: 1000;

}
.check-banner, .check-center{
    padding: 20rpx 20rpx 0;
    box-sizing: border-box;
    overflow: auto;
}
.check-center{
    position: absolute;
    top: 210rpx;
    bottom: 100rpx;
    width: 100%;
}
.add, .minus{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 60rpx;
    font-size: 50rpx;
}
.minus{
    left: 20rpx;
}
.add{
    right: 20rpx;
}
.check-banner{
    height: 210rpx;
    border-bottom: 1px solid #e5e5e5;
}
.banner-left{
    position: absolute;
    top: -30rpx;
    left: 26rpx;
    width: 210rpx;
}
.banner-left image{
    border-color: #e7e7e7;
    border-style: solid;
    border-width: 6rpx;
    border-radius: 10rpx;
    width: 100%;
    height: 210rpx;
}
.banner-right{
    position:absolute;
    left: 274rpx;
    top:0;
    width:450rpx;
    height:180rpx;
}

.banner-right .banner-storage, .banner-right .banner-checked{
    font-size: 28rpx;
    padding: 4rpx 0;
}
.check-center .check-sec{
    padding: 10rpx 0 24rpx;
    font-size: 28rpx;
}
.check-sec:last-child{
    padding-bottom: 20rpx;
}

/* 数量 */
.check-sec .title{
    margin-right: 10rpx;
}
.check-sec .choice-detail{
    margin:0 4rpx;
    padding:12rpx 18rpx;
    text-align:center;
    border:1px solid #e5e5e5;
    border-radius:16rpx;
    margin-bottom: 12rpx;
    
}

/* 选项属性 */
.check-sec .active{
    color: white;
    background-color: #feb70f;
}
.choice-slider{
    position: relative;
    margin:0 4rpx;
    padding:14rpx 0;
    width: 300rpx;
    text-align:center;
    border:1px solid #e5e5e5;
    border-radius:44rpx;
}
/* 确定按钮 */
.confirm{
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 0;
    color: white;
    background-color: #feb70f;
    border-radius: 5%;
}