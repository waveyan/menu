@import "../../res/wxss/shopcar.wxss";
@import "../../templates/buyTemplate/drawer/drawer.wxss";
.page { 
    background-color: rgba(255,255,255,1);  
}

.moreTime{
    margin-right: 13.5rpx;
    float: right;
    width: 230rpx;
    height: 64rpx;
}

.price{
    margin-top: 45rpx;
    margin-right: 0rpx;
    float: right;
}



/* 购物车数量标 */
.count{
    margin-left: 16rpx;
    margin-top: 31rpx;
    position: absolute;
    left: 70rpx;
    top: -20rpx;
    font-size: 25rpx;
    width: 45rpx;
    height: 45rpx;
    line-height: 50rpx;
    color: #fff;
    background: #f45044;
    border-radius: 50%;
    text-align: center
}



/* 购物车内容样式 */
.sec-outer{
    height: 100%;
    padding-bottom: 96rpx;
    box-sizing: border-box;
    position: relative;
    overflow-y: auto;
    overflow-x: hidden;
}
.sec-detail {
    height: 100%;
    position: relative;
    overflow-x: hidden;
}
.margin-40{
    margin-right: 40rpx;
}
.margin-10{
    margin-right: 20rpx;
}
.inline-block-two{
    margin-left: 15rpx;
    font-family:"webfont" !important;
    font-size:36rpx;font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}

.inline-block{
    display: inline-block;
}
.top-slider {
    display: block;
    width: 100%;
    height: 44%;
    background: white;
    border: 1px solid #e5e5e5;
}
.slider-sec{
    width: 100%;
    height: 100%;
    overflow: auto;
}
.slide-image{
    width:100%;
    height:100%;
}
.list-detail{
    padding: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    background: white;
}
.list-sec{
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 20rpx;
}
.top-title{
    font-size: 42rpx;
    padding: 8rpx 0;
}
.description{
    font-size: 28rpx;
    padding: 2rpx 0;
    color: #888888;
}
.pirce-wrapper{
    padding: 8rpx 0;
}
.now{
    font-size: 56rpx;
    color: #e94f4e;
    margin-right: 20rpx;
}
.origin{
    position: relative;
    font-size: 30rpx;
    color: #888888;
}
.origin:before{
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 1px;
    background: #888888;
}
.left-time{
    font-size:24rpx;
    padding:10rpx 16rpx;
    background: #f55939;
    color: white;
}
.detail-sec-wrapper{
    padding-top: 16rpx;
}
.detail-sec{
    font-size: 28rpx;
    padding: 14rpx 0;
}
.list-choice{
    padding: 24rpx 0;
}
.list-choice .color{
    padding-bottom: 1rpx;
}
.list-choice .title{

    font-size: 28rpx;
    color: #888888;
    padding-right: 20rpx;
}
.choice-detail{
    font-size: 30rpx;
}
.rush{
    color: white;
    background-color: #2fa7e0;
    border-radius: 0;
}
.item-detail{
    margin: 0 -20rpx;
}
.detail-title{
    height: 100rpx;
    line-height: 100rpx;
    color: #2fa7e0;
    border-top: 20rpx solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
    text-align: center;
    font-size: 28rpx;
}
.detail-goods{
    font-size: 0;
    box-sizing: border-box;
}
.disabled{
    pointer-events: none;
    background: gray;
}
.detail-img{
    width: 100%;
}

.nature{
    height: 110rpx;
    margin-top: 30rpx;
    border-bottom: 1px solid #e5e5e5;
}

.priceClass{
    color: #feb70f;
}

.icon {
left:40rpx;
top:-20rpx;
width:100rpx;
height:100rpx;
background:#feb70f;
border-radius:50%;

}


.icon image {
  position: absolute;
  left:48rpx;
  top:15rpx;
  width: 70rpx;
  height: 70rpx;
}

.icon .count {
  position: absolute;
  left:90rpx;
  top:-40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  color: #fff;
  background: #feb70f;
  border-radius: 20rpx;
}

.cart {
  display: -webkit-flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.cart .data {
  -webkit-flex: 1;
  border-top: 1rpx solid #e7e7e7;
}

.cart .data .icon {
  position: absolute;
  left: 40rpx;
  top: -20rpx;
  width: 100rpx;
  height: 100rpx;
  background: #feb70f;
  border-radius: 50%;
}

.cart .data .icon image {
  position: absolute;
  left: 15rpx;
  top: 15rpx;
  width: 70rpx;
  height: 70rpx;
}

.cart .data .icon .count {
  position: absolute;
  left: 50rpx;
  top: -45rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  color: #fff;
  background: #feb70f;
  border-radius: 20rpx;
}

.cart .data .total {
  color: #feb70f;
  font-size: 36rpx;
  line-height: 100rpx;
  padding-left: 160rpx;
}

.cart button {
  width: 200rpx;
  height: 100%;
  font-size: 40rpx;
  background: #feb70f;
  color: white;
  border-radius: 10%
  }

  .cart-detail, .cart-detail .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.cart-detail .mask {
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
}

.cart-detail .list {
  position: fixed;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: #f7f7f7;
  padding: 30rpx 0;
  display:inline;
}

.cart-detail .list .item {
  display: -webkit-flex;
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  padding: 20rpx 40rpx;
}

.cart-detail .list .item .name {
  -webkit-flex: 1;
}

.cart-detail .list .item .total {
  width: 120rpx;
}

.cart-detail .list .item .reduce, .cart-detail .list .item .add1 {
  font-size: 50rpx;
  background: #feb70f;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 50%;
}

.cart-detail .list .item .num {
  width: 50rpx;
  text-align: center;
  margin: 0 5rpx;
}

.intro {
line-height:1.5em;
padding:0rpx 30rpx 15rpx 30rpx;
}

.button_mode{
    /* position:absolute; */
    right:30rpx;
    bottom:20rpx;
    width:180rpx;
    height:70rpx;
    background-color: #feb70f;
    color: white;
    font-size: 35rpx;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
