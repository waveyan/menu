<!--星星评价-->
<view class="container">
  <view class="comment1-description">
    <view class='how'>鱼香肉丝</view>
    <view class="star-pos">
      <view class="stars  {{rate[1]>=1? 'on': ''}}" bindtap="changeColor1" data-id="1"></view>
      <view class="stars  {{rate[1]>=2? 'on': ''}}" bindtap="changeColor2" data-id="1"></view>
      <view class="stars  {{rate[1]>=3? 'on': ''}}" bindtap="changeColor3" data-id="1"></view>
      <view class="stars  {{rate[1]>=4? 'on': ''}}" bindtap="changeColor4" data-id="1"></view>
      <view class="stars  {{rate[1]>=5? 'on': ''}}" bindtap="changeColor5" data-id="1"></view>
    </view>

  </view>
  <!--文本域  -->
  <view class="weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" bindinput="bindTextAreaChange" data-id='1' placeholder="我要提出建议..." style="height: 8em" value="{{infos[1].info}}" maxlength="{{noteMaxLen}}" focus />
        <view class="weui-textarea-counter">{{infos[1].noteNowLen}}/{{noteMaxLen}}</view>
      </view>
    </view>
  </view>
  <view class="comment1-description">
    <view class='how'>鱼香肉丝</view>
    <view class="star-pos">
      <view class="stars  {{rate[2]>=1? 'on': ''}}" bindtap="changeColor1" data-id="2"></view>
      <view class="stars  {{rate[2]>=2? 'on': ''}}" bindtap="changeColor2" data-id="2"></view>
      <view class="stars  {{rate[2]>=3? 'on': ''}}" bindtap="changeColor3" data-id="2"></view>
      <view class="stars  {{rate[2]>=4? 'on': ''}}" bindtap="changeColor4" data-id="2"></view>
      <view class="stars  {{rate[2]>=5? 'on': ''}}" bindtap="changeColor5" data-id="2"></view>
    </view>

  </view>
  <!--文本域  -->
  <view class="weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" bindinput="bindTextAreaChange" data-id='2' placeholder="我要提出建议..." style="height: 8em" value="{{infos[2].info}}" maxlength="{{noteMaxLen}}" focus />
        <view class="weui-textarea-counter">{{infos[2].noteNowLen}}/{{noteMaxLen}}</view>
      </view>
    </view>
  </view>

  <!--发布按钮  -->
  <view class="btnSf">
    <button bindtap="bindSubmit">发布</button>
  </view>
</view>